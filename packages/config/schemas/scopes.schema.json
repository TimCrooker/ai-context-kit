{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ai-context scopes",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "scopes"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "const": 1
    },
    "claudeRulesDir": {
      "type": "string",
      "minLength": 1
    },
    "scopes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "codexTarget": {
            "type": "string",
            "minLength": 1
          },
          "includes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "codexIncludes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "claudeIncludes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "codexAgents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "claudeMemories": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "claudeRuleFile": {
            "type": "string",
            "minLength": 1
          },
          "claudePaths": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "parity": {
            "type": "boolean"
          },
          "reason": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
